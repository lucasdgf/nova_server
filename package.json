{
  "name": "nova-server",
  "description": "Nova server to serve API requests from lenders",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "bluebird": "^3.3.4",
    "body-parser": "~1.13.2",
    "cookie-parser": "~1.3.5",
    "debug": "~2.2.0",
    "express": "~4.13.1",
    "jade": "~1.11.0",
    "jshint": "latest",
    "morgan": "~1.6.1",
    "pg-promise": "^3.2.3",
    "serve-favicon": "~2.3.0"
  },
  "devDependencies": {
    "supertest": "^2.0.0"
